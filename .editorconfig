root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true


[*.html]
# Unset max_line_length for HTML files to allow for the non-multiline-able Django tags
max_line_length = unset


[Makefile]
indent_size = 4
indent_style = tab
max_line_length = 240

[{*.py,*.md}]
indent_size = 4
