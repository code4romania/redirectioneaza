{
    "configurations": [
        {
            "name": "Attach to runserver in Docker",
            "type": "debugpy",
            "request": "attach",
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/var/www/redirect/"
              }
            ],
            "connect": {
              "port": 5678,
              "host": "127.0.0.1"
            }
        },
        {
          "name": "Attach to qcluster in Docker",
          "type": "debugpy",
          "request": "attach",
          "pathMappings": [
            {
              "localRoot": "${workspaceFolder}",
              "remoteRoot": "/var/www/redirect/"
            }
          ],
          "connect": {
            "port": 5677,
            "host": "127.0.0.1"
          }
      }
    ]
}
